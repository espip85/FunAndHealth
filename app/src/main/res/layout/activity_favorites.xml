<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/favoritesSearchUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_user"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:layout_margin="10dp"
        />

    <EditText
        android:id="@+id/favoritesSearchRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_recipe"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:layout_margin="10dp"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Table favorite users-->

            <TableLayout
                android:id="@+id/favoritesTableFavoriteUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="30dp"
                android:stretchColumns="0">

                <TableRow>

                    <TextView
                        android:text="@string/favorite_users"
                        android:textSize="20dp"
                        />

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="@string/username"
                        android:textSize="15dp"/>


                    <ImageView
                        android:id="@+id/favoritesRemoveUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/remove_ingredient"
                        android:onClick="removeIngredient"
                        android:src="@drawable/ic_remove_circle_outline_black_24dp" />

                </TableRow>


            </TableLayout>


        </LinearLayout>

    </ScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Table favorite recipes-->


            <TableLayout
                android:id="@+id/favoritesTableFavoriteRecipes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="30dp"
                android:stretchColumns="0">

                <TableRow>

                    <TextView
                        android:text="@string/favorite_recipes"
                        android:textSize="20dp"
                        />

                </TableRow>

                <TableRow>

                    <TextView
                        android:text="@string/recipe_name"
                        android:textSize="15dp"/>


                    <ImageView
                        android:id="@+id/favoritesRemoveRecipe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/remove_ingredient"
                        android:onClick="removeIngredient"
                        android:src="@drawable/ic_remove_circle_outline_black_24dp" />



                </TableRow>


            </TableLayout>



        </LinearLayout>

    </ScrollView>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text= "@string/my_profile"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"/>



</LinearLayout>